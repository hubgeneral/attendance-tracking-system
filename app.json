{
  "expo": {
    "name": "attendance-tracking-system",
    "slug": "attendance-tracking-system",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "attendancetrackingsystem",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We use your location to alert you when you enter specific areas.",
        "NSLocationAlwaysUsageDescription": "We need background location access to detect when you enter locations.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "We need background location access to detect when you enter locations.",
        "UIBackgroundModes": [
          "location"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.illusionalgod.attendancetrackingsystem",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "POST_NOTIFICATIONS",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_LOCATION"
      ]

    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    // "plugins": [
    //   "expo-router",
    //   [
    //     "expo-splash-screen",
    //     {
    //       "image": "./assets/images/splash-icon.png",
    //       "imageWidth": 92,
    //       "imageHeight": 92,
    //       "resizeMode": "contain",
    //       "backgroundColor": "#ffffff",
    //       "dark": {
    //         "backgroundColor": "#000000"
    //       }
    //     }
    //   ]
    // ],
  "plugins": [
  "expo-router",
  [
    "expo-splash-screen",
    {
      "image": "./assets/images/splash-icon.png",
      "imageWidth": 92,
      "imageHeight": 92,
      "resizeMode": "contain",
      "backgroundColor": "#ffffff",
      "dark": {
        "backgroundColor": "#000000"
      }
    }
  ],
  [
    "expo-location",
    {
      "locationAlwaysAndWhenInUsePermission": "Allow this app to use your location in the background for geofencing.",
      "isBackgroundLocationEnabled": true,
      "foregroundServiceNotification": {
        "title": "Location Tracking",
        "body": "Monitoring polygon geofence..."
      }
    }
  ]
],

    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "owner": "illusionalgod"
    }
  }
 
}
